<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="               http://jboss.org/schema/arquillian               http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
  <container qualifier="tomee" default="true">
    <configuration>
      <property name="httpPort">-1</property>
      <property name="stopPort">-1</property>
      <property name="properties">
        # alias the RA to have a nicer name
        openejb.connector.pulsarra.aliases=pulsar
        openejb.connector.pulsarra.skip-default = true
        # deploy the RA
        ra = new://Deployments?jar=${project.build.directory}/pulsarra.rar
        pulsar-javax.jms.ConnectionFactory.Configuration = {"foo":"bar"}
        # configure the queue
        pulsar-javax.jms.Queue.Name = the-queue
      </property>
    </configuration>
  </container>
</arquillian>
